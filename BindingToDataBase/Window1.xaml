<Window x:Class="BindingToDataBase.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="300" Width="450" Loaded="Window_Loaded">
    <Grid>
        <TextBox Height="23" Margin="43,39,59,0" Name="textBox1" VerticalAlignment="Top" Text="{Binding EmployeeID}" />
        <TextBox Height="23" Margin="43,99,59,0" Name="textBox2" VerticalAlignment="Top" Text="{Binding FirstName}"/>
        <TextBox Height="23" Margin="43,156,59,0" Name="textBox3" VerticalAlignment="Top" Text="{Binding LastName}"/>
        <Button Height="23" HorizontalAlignment="Left" Margin="43,0,0,38" Name="button1" VerticalAlignment="Bottom" Width="75" Click="button1_Click">Next</Button>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,0,59,38" Name="button2" VerticalAlignment="Bottom" Width="75" Click="button2_Click">Previous</Button>
        <Button Content="Save" Height="23" HorizontalAlignment="Left" Margin="168,210,0,0" Name="button3" VerticalAlignment="Top" Width="75" Click="button3_Click" />
        <Button Content="Button" Height="23" HorizontalAlignment="Left" Margin="164,12,0,0" Name="button4" VerticalAlignment="Top" Width="75" Click="button4_Click" />
    </Grid>
</Window>
