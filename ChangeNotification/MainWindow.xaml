<Window x:Class="ChangeNotification.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox Text="{Binding Path=ProductID}"
            Height="23" HorizontalAlignment="Left" Margin="178,60,0,0" Name="textBox1" VerticalAlignment="Top" Width="120" />
        <TextBox Text="{Binding Path=ProductName}"
            Height="23" HorizontalAlignment="Left" Margin="178,89,0,0" Name="textBox2" VerticalAlignment="Top" Width="120" />
        <TextBox Text="{Binding Path=Price}"
            Height="23" HorizontalAlignment="Left" Margin="178,118,0,0" Name="textBox3" VerticalAlignment="Top" Width="120" />
        <Button Content="Change Price" Height="23" HorizontalAlignment="Left" Margin="390,250,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="button1_Click" />
    </Grid>
</Window>
